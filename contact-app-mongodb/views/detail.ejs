<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail Contact</h2>
      <% if (!contact) { %>
      <div class="alert alert-danger fw-bold" role="alert">
        Contact not found! <br />
        <a href="/contact" class="alert-link fw-normal"
          >&laquo; Back to Contact List</a
        >.
      </div>
      <% } else { %>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contact.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted">
            <%= contact.phoneNumber %>
          </h6>
          <p class="card-text"><%= contact.email %></p>
          <!-- <a
            href="/contact/delete/<%= contact.name %>"
            class="btn badge btn-danger"
            onclick="return confirm('are you sure?')"
            >Delete</a
          > -->
          <form method="POST" action="/contact?_method=DELETE" class="d-inline">
            <input type="hidden" name="name" value="<%= contact.name %>" />
            <button
              class="btn badge btn-danger"
              onclick="return confirm('are you sure?')"
              type="submit"
            >
              Delete
            </button>
          </form>
          <a href="/contact/edit/<%= contact.name %>" class="btn badge btn-info"
            >Update</a
          >
          <a href="/contact" class="card-link d-block mt-2"
            >&laquo; Back to Contacts</a
          >
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
